{
    "manifest_version": 2,
    "name": "Student Info",
    "description": "Help students",
    "version": "0.1",
    "icons": {
      "128": "src/images/firebase-logo.png"
    },
    "browser_action": {
      "default_icon": "src/images/firebase-logo.png",
      "default_popup": "src/html/popup.html"
    },
    "background": {
      "persistent": true,
      "scripts": [
        "src/scripts/background.js"
      ]
    },
    "permissions": [
      "topSites",
      "storage",
      "activeTab",
      "background",
      "tabs",
      "clipboardRead",
      "clipboardWrite",
      "identity",
      "identity.email",
      "idle",
      "unlimitedStorage",
      "http://*/*",
      "https://*/*"
      
    ],
    "offline_enabled": true,
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "src/scripts/content.js"
        ],
        "run_at": "document_end"
      }
    ]
  }

