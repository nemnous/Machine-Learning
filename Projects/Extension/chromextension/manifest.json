{
  "manifest_version": 2,
  "name": "Data Collection",
  "description": "This extension is used for data collection.",
  "version": "1.0",
  "icons": {
    "128": "firebase-logo.png"
  },
  "browser_action": {
    "default_icon": "firebase-logo.png",
    "default_popup": "credentials.html"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "firebase-app.js",
      "firebase-firestore.js",
      "credentials.js",
      "background.js"
    ]
    // "page": "background.html"
  },
  "permissions": [
    "storage",
    "identity",
    "activeTab",
    "background",
    "tabs",
    "clipboardRead",
    "clipboardWrite"
  ],
  "content_scripts":[
		{
			"matches":[
				"<all_urls>"
			],
			"js":[ "firebase-app.js", "firebase-database.js", "firebase-firestore.js","credentials.js", "background.js"],
			"run_at": "document_end"
		}
	],
  
  // 'self' Adding https://www.gstatic.com/ to the external scripts authorized domains so we can import the firebase JS SDK and access the Realtime Database as well as Firebase Storage.
  "content_security_policy":"script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
